<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <link rel="stylesheet" href="/customer/customer.css"/>
  <title>Cart</title>
</head>
<body>
  <div class="container">
    <div class="topbar">
      <a class="pill" href="/c/products">← Products</a>
      <div class="h1">Cart</div>
      <a class="pill" href="/c/orders">My Orders</a>
    </div>

    <% if(!rows.length){ %>
      <div class="card">
        <div class="h1">Cart is empty</div>
        <div class="muted" style="margin-top:6px;">Add products to continue.</div>
        <div style="margin-top:12px;">
          <a class="btn primary block" href="/c/products">Browse Products</a>
        </div>
      </div>
    <% } else { %>
      <div class="card">
        <div class="item">
          <div class="h1" style="font-size:16px;">Items</div>
          <a class="pill" href="/c/products">+ Add more</a>
        </div>

        <div class="list" style="margin-top:10px;">
          <% rows.forEach(r => { %>
            <div class="item">
              <div style="display:flex;gap:10px;align-items:center;">
  <% if(r.image_url){ %>
    <img src="<%= r.image_url %>" alt="" style="width:46px;height:46px;border-radius:12px;object-fit:cover;border:1px solid var(--border);"/>
  <% } else { %>
    <div style="width:46px;height:46px;border-radius:12px;border:1px solid var(--border);background:#f3f4f6;"></div>
  <% } %>
  <div>
    <div style="font-weight:800;"><%= r.product_name %> • <%= r.sub_name %></div>
                <div class="muted">₹<%= r.price %> / <%= r.unit %></div>
                <div class="muted" style="margin-top:4px;">Line: ₹<%= r.line %></div>
                </div>
</div>
<div class="qty">
                <form method="POST" action="/c/cart/update" style="margin:0;">
                  <input type="hidden" name="sub_product_id" value="<%= r.id %>"/>
                  <input type="hidden" name="delta" value="-1"/>
                  <button type="submit">-</button>
                </form>

                <span class="pill"><%= r.qty %></span>

                <form method="POST" action="/c/cart/update" style="margin:0;">
                  <input type="hidden" name="sub_product_id" value="<%= r.id %>"/>
                  <input type="hidden" name="delta" value="1"/>
                  <button type="submit">+</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <div class="card">
        <div class="h1" style="font-size:16px;">Bill Breakdown</div>
        <div class="item"><span class="muted">Items</span><span>₹<%= itemsTotal %></span></div>
        <div class="item"><span class="muted">Delivery</span><span>₹<%= delivery %></span></div>
        <div class="muted" style="margin-top:6px;">
          Free delivery above ₹<%= freeTh %>
        </div>
        <hr style="border:0;border-top:1px solid var(--border);margin:10px 0">
        <div class="item"><span class="big">Total</span><span class="big">₹<%= total %></span></div>
      </div>

      <div class="sticky">
        <div class="inner">
          <div class="kv">
            <div class="muted">Total</div>
            <div class="big">₹<%= total %></div>
          </div>
          <a class="btn primary" href="/c/checkout">Checkout →</a>
        </div>
      </div>
    <% } %>

  </div>
</body>
</html>

