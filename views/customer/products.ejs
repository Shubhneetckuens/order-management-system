<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <link rel="stylesheet" href="/customer/customer.css"/>
  <title>Products</title>
</head>
<body>
  <div class="container">
    <div class="topbar">
      <a class="pill" href="/c/home">← Home</a>
      <div class="h1">Products</div>
      <a class="pill" href="/c/cart">Cart</a>
    </div>

    <form id="prodForm" method="POST" action="/c/cart/set">
      <input type="hidden" name="cart_json" id="cart_json" value="{}"/>

      <% products.forEach(p => { %>
        <div class="card">
          <div class="h1" style="font-size:16px;"><%= p.name %></div>

          <div class="list" style="margin-top:10px;">
            <% subs.filter(s => String(s.product_id) == String(p.id)).forEach(s => { %>
              <div class="item">
                <div style="display:flex;gap:10px;align-items:center;">
                  <% if(s.image_url){ %>
                    <img src="<%= s.image_url %>" alt="" style="width:52px;height:52px;border-radius:12px;object-fit:cover;border:1px solid var(--border);"/>
                  <% } else { %>
                    <div style="width:52px;height:52px;border-radius:12px;border:1px solid var(--border);background:#f3f4f6;"></div>
                  <% } %>

                  <div>
                    <div style="font-weight:800;"><%= s.name %></div>
                    <div class="muted">₹<%= s.price %> / <%= s.unit %></div>
                  </div>
                </div>

                <div class="qty">
                  <button type="button" class="qbtn" data-delta="-1" data-id="<%= s.id %>">-</button>
                  <span class="pill" id="qv-<%= s.id %>"><%= (cart && cart[String(s.id)]) ? cart[String(s.id)] : 0 %></span>
                  <button type="button" class="qbtn" data-delta="1" data-id="<%= s.id %>">+</button>
                </div>

                <!-- keep old fields too -->
                <input type="hidden" name="qty[<%= s.id %>]" id="qi-<%= s.id %>" value="<%= (cart && cart[String(s.id)]) ? cart[String(s.id)] : 0 %>"/>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>

      <div class="sticky" id="stickyBar" style="display:none;">
        <div class="inner">
          <div class="kv">
            <div class="muted">Selected</div>
            <div class="big"><span id="selCount">0</span> items</div>
          </div>
          <button class="btn primary" type="submit">Add to Cart →</button>
        </div>
      </div>
    </form>
  </div>

  <script>
    function collectCart(){
      const obj = {};
      document.querySelectorAll('input[id^="qi-"]').forEach(i=>{
        const id = i.id.replace('qi-','');
        const v = Number(i.value||0);
        if(v>0) obj[id]=v;
      });
      return obj;
    }

    function refreshSticky(){
      const obj = collectCart();
      document.getElementById('selCount').textContent = String(Object.keys(obj).length);
      document.getElementById('stickyBar').style.display = Object.keys(obj).length ? 'block' : 'none';
    }

    document.querySelectorAll('.qbtn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-id');
        const delta = Number(btn.getAttribute('data-delta'));
        const inp = document.getElementById('qi-' + id);
        const valEl = document.getElementById('qv-' + id);
        let v = Number(inp.value || 0) + delta;
        if(v < 0) v = 0;
        inp.value = String(v);
        valEl.textContent = String(v);
        refreshSticky();
      });
    });

    document.getElementById('prodForm').addEventListener('submit', (e)=>{
      const obj = collectCart();
      document.getElementById('cart_json').value = JSON.stringify(obj);
      // allow normal submit
    });

    refreshSticky();
  </script>
</body>
</html>
