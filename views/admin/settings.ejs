<%- include("partials/header", { title: "Settings", subtitle: "Price / UPI / Delivery rules", active: "settings" }) %>

<% if (q && q.saved === "1") { %>
  <div class="card" style="border-color: rgba(94,234,212,.35); background: rgba(94,234,212,.10);">
    ✅ Changes have been saved
  </div>
<% } %>

<div class="grid">
  <div class="card">
    <h2>Business Settings</h2>

    <form method="POST" action="/admin/settings">
      <div class="row row-2">
        <div>
          <label>Product Name</label>
          <input name="product_name" value="<%= settings.product_name %>" />
        </div>
        <div>
          <label>Unit Label</label>
          <input name="unit_label" value="<%= settings.unit_label %>" />
        </div>
      </div>

      <div class="row row-2">
        <div>
          <label>Today Price (per unit)</label>
          <input name="today_price_per_unit" value="<%= settings.today_price_per_unit %>" />
        </div>
        <div>
          <label>Free Delivery Above</label>
          <input name="free_delivery_threshold" value="<%= settings.free_delivery_threshold %>" />
        </div>
      </div>

      <div class="row row-2">
        <div>
          <label>Delivery Charge Amount</label>
          <input name="delivery_charge_amount" value="<%= settings.delivery_charge_amount %>" />
        </div>
        <div>
          <label>UPI ID</label>
          <input name="upi_id" value="<%= settings.upi_id %>" />
        </div>
      </div>

      <button class="btn" type="submit">Save Settings</button>
    </form>
  </div>
</div>

<%- include("partials/footer", { active: "settings" }) %>


